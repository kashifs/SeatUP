<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cos.adroit.phone"
    android:versionCode="1"
    android:versionName="1.0" >

    <application
        android:name=".TableApp"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.D1" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyTablesActivity"
            android:label="@string/title_mytables"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:theme="@style/Theme.D1" />
        <activity
            android:name=".MyGoalsActivity"
            android:label="@string/title_mygoals"
            android:theme="@style/Theme.D1" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_settings"
            android:theme="@style/Theme.D1" />
        <activity
            android:name=".AddTableActivity"
            android:label="@string/title_addtable"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:theme="@style/Theme.D1" />
        <activity
            android:name=".AddOrdersActivity"
            android:label="@string/title_addorders"
            android:theme="@style/Theme.D1" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_about"
            android:theme="@style/Theme.D1" />
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_search"
            android:theme="@style/Theme.D1" />
    </application>

    <uses-sdk android:minSdkVersion="8" />

</manifest>